/* Mutual recursion */
let odd <- { x |
        cond
        | (x == 0) -> 0;
        | otherwise -> even (x - 1);
        end;
    },
    even <- { x | 
        cond
        | (x == 0) -> 1;
        | otherwise -> odd (x - 1);
        end;
    };
