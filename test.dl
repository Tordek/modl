use "std.dl";

/* Standard recursive fibonacci definition */
let fibo <- { x |
    cond
    | x == 0 -> 1;
    | x == 1 -> 1;
    | otherwise -> fibo (x - 1) + fibo (x - 2);
    end;
};


/* Prettier, less deeply recursive fibonacci */
let fib <- { a b x |
  cond
  | x == 0 -> a;
  | otherwise -> fib b (a + b) (x - 1);
  end;
};

/* Currying is available */
let flatfibo <- fib 1 1;

